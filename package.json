{
  "name": "ppa-batch-to-tms",
  "version": "0.1.0",
  "description": "ppa-batch-to-tms",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "node -r dotenv/config build/index.js",
    "clean": "npx rimraf build node_modules coverage package-lock.json",
    "fix": "npm run fix:prettier && npm run fix:eslint",
    "fix:eslint": "eslint --fix \"**/*.ts\"",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"**/*.ts\"",
    "lint:eslint-unused": "eslint --report-unused-disable-directives \"**/*.ts\"",
    "lint:eslint-no-inline": "eslint --no-inline-config \"**/*.ts\"",
    "lint:prettier": "prettier --check \"**/*.ts\"",
    "test": "jest --config=jest.config.ts --passWithNoTests --detectOpenHandles",
    "test:watch": "jest --config=jest.config.ts --watch",
    "prepare": "husky install"
  },
  "keywords": [
    "mojaloop",
    "actio",
    "frm"
  ],
  "contributors": [
    {
      "name": "Len Bekker"
    }
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@log4js-node/logstash-http": "^1.1.0",
    "@types/formidable": "^3.4.5",
    "arangojs": "^8.8.1",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "elastic-apm-node": "^4.6.0",
    "formidable": "^3.5.1",
    "ioredis": "^5.4.1",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "^7.0.2",
    "koa-router": "^12.0.1",
    "log4js": "^6.9.1",
    "node-cache": "^5.1.2",
    "tslib": "^2.6.3",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.1.0",
    "@types/axios": "^0.14.0",
    "@types/elastic-apm-node": "^2.7.0",
    "@types/jest": "^29.5.12",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.8",
    "@types/log4js": "^2.3.5",
    "@types/node": "^20.14.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-love": "^62.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "husky": "9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
